<section class="products-index">
<% if active_sale? %>
<% @sales.each do |s| %>
  <div class="alert alert-info">
    There is an active sale - <%= s.name %>. Everything is <%= s.percent_off %>% off.
  </div>
  <% end %>
<% end %> 
  <header class="page-header">
    <h1>Products</h1>
  </header>

  <div class="products">
    <%= render @products %>
  </div>

</section>
